# EditorConfig ayuda a definir y mantener estilos de codificación consistentes entre diferentes editores y entornos IDE.
# Más información: https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation settings
indent_style = space
indent_size = 2

# Set default charset
charset = utf-8

# 4 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 4

# Indentation and final newline settings for Markdown and YAML files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Indentation settings for CSS, SCSS, and Less files
[*.css, *.scss, *.less]
indent_style = space
indent_size = 2

# Settings for JavaScript and TypeScript files
[*.js, *.jsx, *.ts, *.tsx]
indent_style = space
indent_size = 2

# Settings for HTML files
[*.html]
indent_style = space
indent_size = 2

# Ignore certain files
[package-lock.json]
indent_style = space
indent_size = 2

# Settings for YAML files
[*.yml]
indent_style = space
indent_size = 2
